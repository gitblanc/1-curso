package uo.mp.s5.shapes;

import java.io.PrintStream;

import uo.mp2021.util.checks.ArgumentChecks;

/**
 * @author blanc
 *
 */
public class Triangle extends Shape {
	private int x1_pos;
	private int y1_pos;
	private int x2_pos;
	private int y2_pos;
	private int x3_pos;
	private int y3_pos;
	/**
	 * @param x1_pos
	 * @param y1_pos
	 * @param x2_pos
	 * @param y2_pos
	 * @param x3_pos
	 * @param y3_pos
	 */
	public Triangle(int x1_pos, int y1_pos, int x2_pos, int y2_pos, int x3_pos, int y3_pos, Colour colour) {
		super(colour);
		ArgumentChecks.isTrue(x1_pos >= 0);
		ArgumentChecks.isTrue(y1_pos >= 0);
		ArgumentChecks.isTrue(x2_pos >= 0);
		ArgumentChecks.isTrue(y2_pos >= 0);
		ArgumentChecks.isTrue(x3_pos >= 0);
		ArgumentChecks.isTrue(y3_pos >= 0);
		this.x1_pos = x1_pos;
		this.y1_pos = y1_pos;
		this.x2_pos = x2_pos;
		this.y2_pos = y2_pos;
		this.x3_pos = x3_pos;
		this.y3_pos = y3_pos;
	}
	@Override
	public void draw(PrintStream out) {
		// TODO Auto-generated method stub
		
	}
	
}
