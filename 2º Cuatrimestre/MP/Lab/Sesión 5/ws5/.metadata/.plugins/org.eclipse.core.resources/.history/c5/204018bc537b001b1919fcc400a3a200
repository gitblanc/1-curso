 */
package uo.mp.s5.shapes;

import uo.mp2021.util.checks.ArgumentChecks;

/**
 * @author blanc
 *
 */
public class Circle extends Shape{

	private int radius;

	public Circle(int x, int y, Colour colour, int radius) {
		super(x, y, colour);
		ArgumentChecks.isTrue(radius >= 0);
	}

	public int getRadius() {
		return radius;
	}
}
